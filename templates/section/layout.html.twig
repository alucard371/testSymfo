{% extends 'base.html.twig' %}
{% set current = app.request.attributes.get('_route')  %}

{% block title %}layout!{% endblock %}

{% block header %}
    
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href={{ path('home') }}>Raining Cats</a>
        
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
               {% if current ==  'mentions' %}
           <li class="nav-item">
                    <a class="nav-link active" href={{ path('mentions') }} tabindex="-1" aria-disabled="true">mentions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('contact') }} tabindex="-1" aria-disabled="true">contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('home') }} tabindex="-1" aria-disabled="true">home</a>
                </li>
        {% elseif current ==  'contact' %}
          <li class="nav-item">
                    <a class="nav-link" href={{ path('mentions') }} tabindex="-1" aria-disabled="true">mentions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href={{ path('contact') }} tabindex="-1" aria-disabled="true">contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('home') }} tabindex="-1" aria-disabled="true">home</a>
                </li>
            {% elseif current == 'home' %}
              <li class="nav-item">
                    <a class="nav-link" href={{ path('mentions') }} tabindex="-1" aria-disabled="true">mentions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('contact') }} tabindex="-1" aria-disabled="true">contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href={{ path('home') }} tabindex="-1" aria-disabled="true">home</a>
                </li>
            {% endif %}
            </ul>
                 <a class="btn btn-info" href={{ path('blog/article/new') }} tabindex="-1" aria-disabled="true">New article</a>
                 <a class="btn btn-primary" href={{ path('blog/show_all') }}><button>List</button></a>
        </div>
    </nav>
{% endblock %}

