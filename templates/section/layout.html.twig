{% extends 'base.html.twig' %}
{% set current = app.request.attributes.get('_route')  %}

{% block title %}layout!{% endblock %}

{% block header %}
    
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href={{ path('blog/accueil') }}>Raining Cats</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
               {% if current ==  'blog/article/new' %}
           <li class="nav-item">
                    <a class="nav-link active" href={{ path('blog/article/new') }} tabindex="-1" aria-disabled="true">Nouvel article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('blog/show_all') }} tabindex="-1" aria-disabled="true">Liste article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('blog/accueil') }} tabindex="-1" aria-disabled="true">accueil</a>
                </li>
        {% elseif current ==  'blog/show_all' %}
          <li class="nav-item">
                    <a class="nav-link" href={{ path('blog/article/new') }} tabindex="-1" aria-disabled="true">Nouvel article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href={{ path('blog/show_all') }} tabindex="-1" aria-disabled="true">Liste article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('blog/accueil') }} tabindex="-1" aria-disabled="true">accueil</a>
                </li>
            {% elseif current == 'blog/accueil' %}
              <li class="nav-item">
                    <a class="nav-link" href={{ path('blog/article/new') }} tabindex="-1" aria-disabled="true">Nouvel article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href={{ path('blog/show_all') }} tabindex="-1" aria-disabled="true">Liste article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href={{ path('blog/accueil') }} tabindex="-1" aria-disabled="true">accueil</a>
                </li>
            {% endif %}
